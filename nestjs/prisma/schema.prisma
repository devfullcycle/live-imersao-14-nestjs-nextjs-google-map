generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// banco relacional - table | mongo - collection
model Route {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  source      Place
  destination Place
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  distance    Float
  duration    Float
  directions  Json
}

type Place {
  name     String
  location Coord
}

type Coord {
  lat Float
  lng Float
}
